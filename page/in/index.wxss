/* page/in/index.wxss */

.container {
  background-color: #f2f2f2;
}

.view-clicked {
  background-color:#666
}

.item {
  padding: 10px;
  background-color: #fff;
  color: #787878;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  flex: inherit;
}
.item .img{
    width: 40%;
    height: 100px;
}
.title {
  font-family: Courier New, Courier, monospace;
  font-size: 16px;
  color: #333;
  display: block;
}
.time {
  font-size: 14px;
  color: #666;
  margin: 2px 0px;
  text-align:right;
  display: block;
}